{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "KafkaConsumer": {
    "TopicName": "orders",
    "ConsumerNumber": 1,
    "GroupId": "example-docker-processor",
    "SchemaRegistryUrl": "http://schema-registry:8081",
    "BootstrapServers": "kafka:29092",
    "RetryPolicy": {
      "RetryTopics": [
        {
          "TopicName": "orders.example-processor.retry.immediate",
          "Delay": "00:00:03",
          "RetryAttempts": 2
        },
        {
          "TopicName": "orders.example-processor.retry.short",
          "Delay": "00:00:15",
          "RetryAttempts": 1
        },
        {
          "TopicName": "orders.example-processor.retry.long",
          "Delay": "00:00:30",
          "RetryAttempts": 1
        }
      ]
    },
    "Error": {
      "TopicName": "orders.example-processor.error"
    }
  }
}

