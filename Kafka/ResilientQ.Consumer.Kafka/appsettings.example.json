{
  "KafkaConsumer": {
    "TopicName": "my-topic",
    "ConsumerNumber": 1,
    "GroupId": "my-consumer-group",
    "SchemaRegistryUrl": "http://localhost:8081",
    "BootstrapServers": "localhost:9092",
    "Error": {
      "TopicName": "my-topic.my-consumer-group.error"
    },
    "RetryPolicy": {
      "RetryTopics": [
        {
          "TopicName": "my-topic.my-consumer-group.retry.immediate",
          "GroupId": "my-consumer-group",
          "Delay": "00:00:30",
          "RetryAttempts": 3
        },
        {
          "TopicName": "my-topic.my-consumer-group.retry.short",
          "GroupId": "my-consumer-group",
          "Delay": "00:05:00",
          "RetryAttempts": 2
        },
        {
          "TopicName": "my-topic.my-consumer-group.retry.long",
          "GroupId": "my-consumer-group",
          "Delay": "00:30:00",
          "RetryAttempts": 1
        }
      ]
    }
  }
}

